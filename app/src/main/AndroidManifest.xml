<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myandroidapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@drawable/pic"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pic"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ActivityWithFragment"
            android:label="@string/title_activity_with_fragment"></activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="Register Activity"></activity>
        <activity
            android:name=".activities.ui.CallAPIActivity"
            android:label="CallAPIActivity">
        </activity>
        <activity
            android:name=".activities.SecondActivity"
            android:label="Second Activity">
        </activity>
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:label="Forgot Password Activity">
        </activity>
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>